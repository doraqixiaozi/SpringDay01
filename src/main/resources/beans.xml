<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--配置service
  <bean >  配置需要创建的对象
  id: 用于之后从spring容器中获得实例时使用的
  class：需要创建实例的全限定类名
-->

  <bean id="helloSpring" class="com.softeem.spring1.HolleSpring">
      <property name="dispring" ref="diSpring"/>
    </bean>

    <bean id="diSpring" class="com.softeem.spring1.DISpring"/>

    <bean id="person" class="com.softeem.spring1.Person">
        <constructor-arg name="name" value="liu"/>
        <constructor-arg name="address" value="安徽信息工程学院"/>
        <constructor-arg name="age" value="22"/>


    </bean>




</beans>





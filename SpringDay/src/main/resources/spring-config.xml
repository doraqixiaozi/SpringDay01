    <!--设值注入-->
    <bean id="pserson" class="SpringStudy.SpringDi.Pserson">
        <property name="name" value="张三"></property>
        <property name="age" value="16"></property>
        <property name="address" value="安徽省芜湖"></property>
    </bean>

    <bean id="collectionBean" class="SpringStudy.SpringDi.CollectionBean">
        <property name="args">
            <list>
                <value>老雄</value>
                <value>老男人</value>
                <value>老伟</value>
            </list>
        </property>
        <property name="list">
            <list>
                <value>第一老</value>
                <value>第二老</value>
                <value>第三老</value>
            </list>
        </property>
        <property name="map">
            <map>
                <entry key="老雄" value="老司机"></entry>
                <entry key="老男人" value="老司机"></entry>
                <entry key="老伟" value="老司机"></entry>
            </map>
        </property>
        <property name="set">
            <set>
                <value>第一老</value>
                <value>第二老</value>
                <value>第三老</value>
            </set>
        </property>
    </bean>
</beans>